{
  "$schema": "https://design-tokens.github.io/design-tokens-schema/schema.json",
  "name": "Enterprise SaaS Design System Tokens",
  "description": "Design tokens for a multi-brand enterprise SaaS platform",
  "properties": {
    // ... (previous color, size, typography, effect, animation tokens remain the same)
    
    "component": {
      // ... (previous button, input, card, modal, tooltip components remain the same)
      
      "table": {
        "header": {
          "background": { "value": "{color.core.neutral.50}" },
          "text": { "value": "{color.core.neutral.700}" },
          "border": { "value": "{color.semantic.border.default}" },
          "fontSize": { "value": "{typography.fontSize.sm}" },
          "fontWeight": { "value": "{typography.fontWeight.semibold}" },
          "padding": {
            "x": { "value": "{size.spacing.4}" },
            "y": { "value": "{size.spacing.3}" }
          }
        },
        "cell": {
          "background": {
            "default": { "value": "{color.core.neutral.0}" },
            "hover": { "value": "{color.core.neutral.50}" },
            "selected": { "value": "{color.core.brand.primary.50}" }
          },
          "text": { "value": "{color.semantic.text.primary}" },
          "border": { "value": "{color.semantic.border.default}" },
          "padding": {
            "x": { "value": "{size.spacing.4}" },
            "y": { "value": "{size.spacing.3}" }
          }
        },
        "pagination": {
          "button": {
            "background": {
              "default": { "value": "transparent" },
              "hover": { "value": "{color.core.neutral.100}" },
              "active": { "value": "{color.core.brand.primary.100}" },
              "disabled": { "value": "transparent" }
            },
            "text": {
              "default": { "value": "{color.core.neutral.700}" },
              "hover": { "value": "{color.core.neutral.900}" },
              "active": { "value": "{color.core.brand.primary.700}" },
              "disabled": { "value": "{color.core.neutral.300}" }
            }
          }
        }
      },
      
      "tabs": {
        "list": {
          "border": { "value": "{color.semantic.border.default}" }
        },
        "tab": {
          "background": {
            "default": { "value": "transparent" },
            "hover": { "value": "{color.core.neutral.100}" },
            "active": { "value": "{color.core.neutral.0}" },
            "disabled": { "value": "transparent" }
          },
          "text": {
            "default": { "value": "{color.core.neutral.600}" },
            "hover": { "value": "{color.core.neutral.900}" },
            "active": { "value": "{color.core.brand.primary.600}" },
            "disabled": { "value": "{color.core.neutral.300}" }
          },
          "border": {
            "active": { "value": "{color.core.brand.primary.600}" }
          },
          "padding": {
            "x": { "value": "{size.spacing.4}" },
            "y": { "value": "{size.spacing.2}" }
          },
          "fontSize": { "value": "{typography.fontSize.sm}" },
          "fontWeight": { "value": "{typography.fontWeight.medium}" }
        }
      },

      "dropdown": {
        "trigger": {
          "background": {
            "default": { "value": "{color.core.neutral.0}" },
            "hover": { "value": "{color.core.neutral.50}" },
            "active": { "value": "{color.core.neutral.100}" },
            "disabled": { "value": "{color.core.neutral.50}" }
          },
          "text": {
            "default": { "value": "{color.semantic.text.primary}" },
            "disabled": { "value": "{color.semantic.text.disabled}" }
          },
          "border": { "value": "{color.semantic.border.default}" },
          "borderRadius": { "value": "{size.borderRadius.md}" },
          "padding": {
            "x": { "value": "{size.spacing.3}" },
            "y": { "value": "{size.spacing.2}" }
          }
        },
        "content": {
          "background": { "value": "{color.core.neutral.0}" },
          "border": { "value": "{color.semantic.border.default}" },
          "borderRadius": { "value": "{size.borderRadius.md}" },
          "shadow": { "value": "{effect.shadow.lg}" }
        },
        "item": {
          "background": {
            "default": { "value": "transparent" },
            "hover": { "value": "{color.core.neutral.100}" },
            "active": { "value": "{color.core.brand.primary.50}" },
            "disabled": { "value": "transparent" }
          },
          "text": {
            "default": { "value": "{color.semantic.text.primary}" },
            "disabled": { "value": "{color.semantic.text.disabled}" }
          },
          "padding": {
            "x": { "value": "{size.spacing.3}" },
            "y": { "value": "{size.spacing.2}" }
          }
        }
      },

      "badge": {
        "default": {
          "background": { "value": "{color.core.neutral.100}" },
          "text": { "value": "{color.core.neutral.700}" }
        },
        "primary": {
          "background": { "value": "{color.core.brand.primary.100}" },
          "text": { "value": "{color.core.brand.primary.700}" }
        },
        "success": {
          "background": { "value": "{color.core.brand.success.100}" },
          "text": { "value": "{color.core.brand.success.700}" }
        },
        "warning": {
          "background": { "value": "{color.core.brand.warning.100}" },
          "text": { "value": "{color.core.brand.warning.700}" }
        },
        "error": {
          "background": { "value": "{color.core.brand.error.100}" },
          "text": { "value": "{color.core.brand.error.700}" }
        },
        "borderRadius": { "value": "{size.borderRadius.full}" },
        "padding": {
          "x": { "value": "{size.spacing.2}" },
          "y": { "value": "{size.spacing.1}" }
        },
        "fontSize": { "value": "{typography.fontSize.xs}" },
        "fontWeight": { "value": "{typography.fontWeight.medium}" }
      },

      "alert": {
        "info": {
          "background": { "value": "{color.core.brand.info.50}" },
          "border": { "value": "{color.core.brand.info.200}" },
          "text": { "value": "{color.core.brand.info.700}" },
          "icon": { "value": "{color.core.brand.info.500}" }
        },
        "success": {
          "background": { "value": "{color.core.brand.success.50}" },
          "border": { "value": "{color.core.brand.success.200}" },
          "text": { "value": "{color.core.brand.success.700}" },
          "icon": { "value": "{color.core.brand.success.500}" }
        },
        "warning": {
          "background": { "value": "{color.core.brand.warning.50}" },
          "border": { "value": "{color.core.brand.warning.200}" },
          "text": { "value": "{color.core.brand.warning.700}" },
          "icon": { "value": "{color.core.brand.warning.500}" }
        },
        "error": {
          "background": { "value": "{color.core.brand.error.50}" },
          "border": { "value": "{color.core.brand.error.200}" },
          "text": { "value": "{color.core.brand.error.700}" },
          "icon": { "value": "{color.core.brand.error.500}" }
        },
        "borderRadius": { "value": "{size.borderRadius.md}" },
        "padding": { "value": "{size.spacing.4}" }
      },

      "toast": {
        "background": { "value": "{color.core.neutral.900}" },
        "text": { "value": "{color.core.neutral.0}" },
        "borderRadius": { "value": "{size.borderRadius.md}" },
        "shadow": { "value": "{effect.shadow.lg}" },
        "padding": { "value": "{size.spacing.4}" }
      },

      "dialog": {
        "overlay": { "value": "rgba(0, 0, 0, 0.5)" },
        "background": { "value": "{color.semantic.background.paper}" },
        "borderRadius": { "value": "{size.borderRadius.lg}" },
        "shadow": { "value": "{effect.shadow.xl}" },
        "header": {
          "padding": { "value": "{size.spacing.6}" },
          "border": { "value": "{color.semantic.border.default}" }
        },
        "body": {
          "padding": { "value": "{size.spacing.6}" }
        },
        "footer": {
          "padding": { "value": "{size.spacing.6}" },
          "border": { "value": "{color.semantic.border.default}" },
          "background": { "value": "{color.core.neutral.50}" }
        }
      },

      "skeleton": {
        "background": { "value": "{color.core.neutral.100}" },
        "highlight": { "value": "{color.core.neutral.200}" },
        "borderRadius": { "value": "{size.borderRadius.md}" }
      }
    }
  }
}