{
  "source": ["tokens/src/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "files": [{
        "destination": "src/styles/tokens.css",
        "format": "css/variables",
        "options": {
          "showFileHeader": false
        }
      }]
    },
    "ts": {
      "transformGroup": "js",
      "files": [{
        "destination": "src/types/tokens.ts",
        "format": "typescript/module-declarations"
      }]
    }
  },
  "parsers": [{
    "pattern": "**/*.json",
    "parser": "json"
  }]
}